<%- include('../partials/header') %>

<h2>Enter a New Item</h2>
<form id="new-form" action="/items" method="POST">
  <label>Item:</label>
    <input type="text" name="item">
   
    <label>Brand: </label>
    <input type="text" name="brand">
 
  <label>Category:</label>
    <select name="category">
      <option value="tools">Tools</option>
      <option value="kitchen">Kitchen</option>
      <option value="lawnGarden">Lawn & Garden</option>
      <option value="gym">Gym</option>
      <option value="crafting">Crafting</option>
      <option value="entertainment">Entertainment</option>
      <option value="books">Books</option>
      <option value="kidsItems">Kids Items</option>
      <option value="other">Other</option>
    </select>
  
  <label>Owner:</label>
    <input type="text" name="owner">

  <label>Length of Allowed Borrow Time:</label>
  <input type="number" id="borrowTime" name="borrowTime" min="1"> 
  <input type="submit" value="Add Item">
</form>

<%- include('../partials/footer') %>