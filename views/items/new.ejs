<%- include('../partials/header') %>

<h2>Enter a New Item</h2>
<form id="new-form" action="/items" method="POST">
  <label>Item:</label>
    <input type="text" name="item">
   
    <label>Brand: </label>
    <input type="text" name="brand">
 
  <label>Category:</label>
    <select name="category">
      <option value="tools">Tools</option>
      <option value="kitchen">Kitchen</option>
      <option value="lawnGarden">Lawn & Garden</option>
      <option value="gym">Gym</option>
      <option value="crafting">Crafting</option>
      <option value="entertainment">Entertainment</option>
      <option value="books">Books</option>
      <option value="kidsItems">Kids Items</option>
      <option value="other">Other</option>
    </select>
  
  <label>Owner:</label>
    <input type="text" name="owner">

  <label>Borrow:</label>
  <select name="borrow">
    <option value="7Days">7 Days</option>
    <option value="14Days">14 Days</option>
    <option value="21Days">21 Days</option>
  </select>
  
  <label for="pic">Choose an item picture:</label>
  <input type="file" id="pic" name="pic" accept="image/png, image/jpeg">
  
  <% items.forEach(function(p) { %>
     <td><a href="/items/<%= p._id %>"></a></td>
    <% }); %>  
  
  <input type="submit" value="Add Item">
</form>

<%- include('../partials/footer') %>