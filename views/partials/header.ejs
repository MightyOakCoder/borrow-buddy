      <a href="/items/new" <%- title === 'Add Item' ? 'class="active"' : '' %>>ADD ITEM</a>
        <a href="/logout">LOGOUT</a>
        <% } else { %>
            <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"</a>
            <a href="/items" <%- title === 'Available Items' ? 'class="active"' : '' %>>AVAILABLE ITEMS</a>
        <% } %>
  </nav>

